        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/custom_padding"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="@dimen/lg_text_size">

            <TextView
                style="@style/resume_text_title"
                android:text="自我评价" />

            <View style="@style/text_line" />

            <TextView
                style="@style/resume_text"
                android:text="自我评价" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>