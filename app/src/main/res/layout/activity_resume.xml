                android:textSize="@dimen/lg_text_size" />

            <TextView
                style="@style/resume_text"
                android:text="工作内容：" />

            <TextView
                style="@style/resume_text"
                android:text="校区教学管理系统的维护和搭建，公司内部OA系统的常用部署和建设，课下负责学员的课程和项目辅导，项目需求分析，项目的开发设计，课后作业讲解" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/custom_padding"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="@dimen/lg_text_size">

            <TextView
                style="@style/resume_text_title"
                android:text="项目经验" />

            <View style="@style/text_line" />

            <TextView
